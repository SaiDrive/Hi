# Server Environment Variables
# Copy this file to `.env` in the server directory

# MongoDB connection string (include credentials or use SRV format)
MONGODB_URI=mongodb+srv://username:password@cluster0.example.mongodb.net/brand-ai?retryWrites=true&w=majority

# Google OAuth 2.0 Web Client ID used for verifying Google ID Tokens
GOOGLE_CLIENT_ID=YOUR_GOOGLE_OAUTH_CLIENT_ID.apps.googleusercontent.com

# JWT secret for signing session tokens (use a long random string)
JWT_SECRET=replace_with_a_long_random_secret_value

# Port for Express auth server (defaults to 5174 if unset)
PORT=3000

# Optional: Node environment (development | production)
NODE_ENV=development
